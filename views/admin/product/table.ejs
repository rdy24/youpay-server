<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Game</th>
      <th>Icon</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < product.length; i++){ %>
    <tr>
      <td><%= i + 1 %></td>
      <td><%= product[i].game %></td>
      <td>
        <img
          src="https://api-youpay.herokuapp.com/uploads/<%= product[i].icon %>"
          width="100px"
        />
      </td>
      <td>
        <form
          action="/product/delete/<%= product[i]._id %>?_method=DELETE"
          method="post"
        >
          <a
            href="/product/edit/<%= product[i]._id %>"
            class="btn btn-info btn-sm"
          >
            <i class="fas fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
